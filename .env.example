# Supabase Auth (クライアントサイドでも使用)
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# Supabase (サーバーサイドのみ)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# Site URL (マジックリンクのリダイレクト先)
NEXT_PUBLIC_SITE_URL=http://localhost:3200

# Wix Headless (API Key認証)
WIX_API_KEY=           # API Key Manager で生成
WIX_SITE_ID=           # Wix サイト ID
WIX_ACCOUNT_ID=        # Wix アカウント ID

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Slack 通知
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# Vercel Cron (Vercel が自動生成、ローカルテスト時は任意の値)
CRON_SECRET=

# Discord OAuth (削除可能 — Supabase Auth に移行済み)
